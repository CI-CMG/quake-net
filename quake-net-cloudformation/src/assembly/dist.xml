<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <dependencySets>
   <dependencySet>
     <outputDirectory>lambda</outputDirectory>
     <unpack>false</unpack>
     <useTransitiveDependencies>false</useTransitiveDependencies>
     <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}${dashTimestamp}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
     <includes>
       <include>*:*:*:lambda</include>
     </includes>
   </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>target/cloudformation</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/*.yaml</include>
        <include>**/*.md</include>
        <include>**/*.json</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0440</fileMode>
    </fileSet>
  </fileSets>
</assembly>